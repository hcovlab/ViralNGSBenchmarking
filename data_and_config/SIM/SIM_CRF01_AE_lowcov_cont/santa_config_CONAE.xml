<santa xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="santa.xsd">
	<replicates>1</replicates>
	<simulation>
		<genome>
			<length>8780</length>
			<sequences file='HIV1_CON_AE_simref.fasta'/>
			<feature>
				<name>PR</name>
				<type>aminoAcid</type>
				<!-- Ensure feature is exactly 99 codons long -->
				<coordinates>1472-1768</coordinates>
			</feature>
			<feature>
				<name>RT</name>
				<type>aminoAcid</type>
				<coordinates>1769-3448</coordinates>
			</feature>
		</genome>

		<population>
			<populationSize>1000</populationSize>
			<inoculum>all</inoculum>
		</population>

		<fitnessFunction>
			<populationSizeDependentFitness>
				<feature>PR</feature>
				<sites>1-99</sites>
				<declineRate>0.005</declineRate>
				<maxPopulationSize>50000</maxPopulationSize>
			</populationSizeDependentFitness>
			<empiricalFitness id="RT1">
	                <feature>RT</feature>
	                <sites>1</sites>
                    <values>
                        0.01 <!-- A -->
                        0.01 <!-- C -->
                        0.01 <!-- D -->
                        0.01 <!-- E -->
                        0.01 <!-- F-->
                        0.01 <!-- G -->
                        0.01 <!-- H -->
                        0.01 <!-- I -->
                        0.01 <!-- K -->
                        0.01 <!-- L -->
                        0.01 <!-- M -->
                        0.01 <!-- N -->
                        1.20 <!-- P -->
                        0.01 <!-- Q -->
                        0.01 <!-- R -->
                        0.01 <!-- S -->
                        0.01 <!-- T -->
                        0.01 <!-- V -->
                        0.01 <!-- W -->
                        0.01 <!-- Y -->
                    </values>
                </empiricalFitness>
		</fitnessFunction>

		<mutator>
			<nucleotideMutator>
				<mutationRate>2.5E-5</mutationRate>
				<rateBias>
	                    0.42 2.49 0.29
	                    1.73 0.23 4.73
	                    6.99 0.20 0.60
	                    1.02 2.56 0.88
	                </rateBias>
				<indelmodel model="NB">0.4 1</indelmodel>
				<insertprob>2.5E-2</insertprob>
				<deleteprob>2.5E-2</deleteprob>
			</nucleotideMutator>
		</mutator>

		<replicator>
			<recombinantReplicator>
				<dualInfectionProbability>0.05</dualInfectionProbability>
				<recombinationProbability>0.001</recombinationProbability>
			</recombinantReplicator>
		</replicator>

		<epoch>
			<name>initial</name>
			<generationCount>1000</generationCount>			
		</epoch>
		
		<samplingSchedule>
		<sampler>
			<atGeneration>1000</atGeneration>
			<fileName>alignment_%r.fasta</fileName>
			<alignment>
				<sampleSize>100</sampleSize>
				<format>FASTA</format>
				<label>seq_%g_%s</label>
			</alignment>
		</sampler>
		</samplingSchedule>
	</simulation>
</santa>
